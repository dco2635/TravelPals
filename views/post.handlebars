
<div class="row g-3">
     <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <h4 id="add_post_head">Add New Post</h4>
                    </div>
                </div>
                <hr>
                <div class="row">
                        <form id="post-form" action="/" method="post" role="form">
                             <div class="col-md-9">
                             <label for="title" class="form-label">Title</label>
                               <input id="title" name="title" placeholder="Enter Title here" class="form-control here" type="text">
                                 </div>
                                  <div class="col-md-9">
                             <label for="description" class="form-label">Description</label>
                                <input id="description" name="description" placeholder="Enter short description here" class="form-control here" type="text">
                                 </div>


                                   <div class="col-md-9">
                             <label for="body" class="form-label">Body</label>
                            <textarea id="body" name="body" rows="50" class="form-control" placeholder="Enter body here"></textarea>
                                 </div>

                               <div class="form-group row">
                                <div class="col-md-9 text-center topMargin">
                                    <button onclick="history.back()" class="button">Post</button>
                                </div>
                            </div>
                        </form>
                
                </div>
            </div>
        </div>
    </div>
</div>