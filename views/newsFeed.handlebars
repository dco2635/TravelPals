<nav class="navbar navbar-light bg-light" style="text-align: center;">
  <form class="form-inline">
     <input id="Search" name="Search" placeholder="Search" class="form-control here" type="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</nav>
{{#each data}}
      <div class="card mb-3" style="max-width: 540px;margin:20px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="https://heymondo.com/blog/wp-content/uploads/2021/03/shutterstock_371958268_compressed.jpg" class="imgWidth" alt="..." >
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{body}}</p>
        <p class="card-text">Likes: {{likes}}</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
{{#each comments}}
<p>{{text}}</p>
{{/each}}
        <input id="comment" name="comment" placeholder="comment" class="form-control here" type="text" aria-label="comment">
      </div>
    </div>
  </div>
</div>
{{/each}}
